{
    "version": "2.0.0",
    "type": "shell",
    "label": "C/C++: g++ build active file",
    "command": "g++",
    "args": [
        "${file}",
        "-g",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}.out"
    ],
    "options": {
        "cwd": "${fileDirname}"
    },
    "problemMatcher": [
        "$gcc"
    ],
    "group": {
        "kind": "build",
        "isDefault": true
    },
    "detail": "compiler: /usr/bin/g++",
}